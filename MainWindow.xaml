<Window x:Class="PhotoBooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoBooth"
        mc:Ignorable="d"
        Title="Cabine Party" Background="Black" Height="350" Width="525" WindowStyle="None" WindowState="Maximized">
    <Grid>
        <MediaElement Name="VideoElement" LoadedBehavior="Manual" HorizontalAlignment="Center" />
        <StackPanel VerticalAlignment="Bottom" Margin="50" Width="100" Visibility="{Binding ButtonVisibility}">
            <Button Name="PlayButton" Click="Play_OnClick">Play</Button>
        </StackPanel>
    </Grid>
</Window>
